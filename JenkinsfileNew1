
pipeline {
    agent any
    tools {
        maven "maven"
    }

    stages {
        stage('Checkout Stage') {
            steps {
                script {
                    sendSlackNotification('STARTED')
                }
                git branch: 'feature1', credentialsId: '4fed7abf-d02c-4ae8-92c2-1f56430fb590', url: 'https://github.com/NARRESHKARRI-DEVOPS/MAVEN--WAR-FILE.git'
            }
        }

        stage('Build') { 
            steps {
                sh "mvn clean package"
            }
        }

        stage('SQREPORT') {
            steps {
                sh "mvn sonar:sonar"
            }
        }

        stage('Deploy To Nexus') {
            steps {
                sh "mvn deploy"
            }
        }

        stage('Deploy App To Tomcat') {
            steps {
                script {
                    echo "Deploying WAR file using curl..."
                    
                    // Declare variable inside script block
                    def warFile = "${env.WORKSPACE}/target/maven-web-application.war"

                    if (!fileExists(warFile)) {
                        error "WAR file not found at ${warFile}"
                    }

                    sh """
                        curl -u kkfunda:kkfunda \
                            --upload-file ${warFile} \
                            "http://3.108.194.157:8080/manager/text/deploy?path=/maven-web-application&update=true"
                    """
                }
            }
        }
    } 

    post {
        success {
            script {
                sendSlackNotification(currentBuild.result)
            }
        }
        failure {
            script {
                sendSlackNotification(currentBuild.result)
            }
        }
    }
}

// âœ… Fixed Slack Notification - Wrapped inside script block
void sendSlackNotification(String buildStatus) {
    def colorCode = buildStatus == 'SUCCESS' ? '#00FF00' : '#FF0000'
    def summary = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})"

    def slackChannels = ['#airtel-dev', '#airtel-prod', '#airtel-qa']
    for (channel in slackChannels) {
        slackSend(color: colorCode, message: summary, channel: channel)
    }
}

